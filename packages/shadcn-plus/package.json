{
  "name": "shadcn-plus",
  "version": "0.0.2",
  "description": "A configurable wrapper for shadcn/ui that simplifies integration with easy-to-use options.",
  "keywords": [
    "react",
    "components",
    "shadcn",
    "shadcn/ui",
    "shadcn-plus"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "license": "MIT",
  "author": "Rik Li",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linyana/shadcn-plus.git"
  },
  "bugs": {
    "url": "https://github.com/linyana/shadcn-plus/issues"
  },
  "homepage": "https://github.com/linyana/shadcn-plus",
  "engines": {
    "node": ">=18.18.0"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"yarn build:watch\" \"yarn build:css:watch\"",
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "build:css": "npx @tailwindcss/cli -i ./src/style.css -o ./dist/style.css",
    "build:watch": "tsup src/index.ts --format esm,cjs --dts --external react --watch",
    "build:css:watch": "npx @tailwindcss/cli -i ./src/style.css -o ./dist/style.css --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css",
      "default": "./dist/style.css"
    }
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "1.1.2",
    "@tailwindcss/cli": "^4.0.17",
    "@tailwindcss/postcss": "^4.0.17",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.485.0",
    "nanoid": "^5.1.5",
    "postcss": "^8.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-is": "19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.17",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.4"
  },
  "devDependencies": {
    "@shadcn-plus/tsconfig": "*",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "concurrently": "9.1.2",
    "globals": "15.15.0",
    "tsup": "^5.10.1",
    "typescript": "5.7.2"
  },
  "prettier": {
    "printWidth": 50,
    "jsxBracketSameLine": false,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },
  "jest": {
    "preset": "scripts/jest/node"
  }
}
