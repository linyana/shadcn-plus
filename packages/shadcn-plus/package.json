{
  "name": "shadcn-plus",
  "version": "0.0.18",
  "description": "A configurable wrapper for shadcn/ui that simplifies integration with easy-to-use options.",
  "keywords": [
    "react",
    "components",
    "shadcn",
    "shadcn/ui",
    "shadcn-plus"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "license": "MIT",
  "author": "Rik Li",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linyana/shadcn-plus.git"
  },
  "bugs": {
    "url": "https://github.com/linyana/shadcn-plus/issues"
  },
  "homepage": "https://github.com/linyana/shadcn-plus",
  "engines": {
    "node": ">=18.18.0"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "src/assets",
    "src/icons",
    "src/types",
    "src/hooks/index.ts"
  ],
  "scripts": {
    "dev": "concurrently \"yarn build:watch\" \"yarn build:css:watch\" \"yarn build:custom:css:watch\"",
    "build": "concurrently \"yarn build:main\" \"yarn build:css\" \"yarn build:custom:css\"",
    "build:main": "tsup src/index.ts src/types/index.ts src/icons/index.ts src/hooks/index.ts --format esm,cjs --dts --external react",
    "build:css": "npx @tailwindcss/cli -i ./src/style.css -o ./dist/style.css",
    "build:custom:css": "npx @tailwindcss/cli -i ./src/expand.css -o ./dist/expand.css",
    "build:watch": "tsup src/index.ts src/types/index.ts src/icons/index.ts src/hooks/index.ts --format esm,cjs --dts --external react --watch",
    "build:css:watch": "npx @tailwindcss/cli -i ./src/style.css -o ./dist/style.css --watch",
    "build:custom:css:watch": "npx @tailwindcss/cli -i ./src/expand.css -o ./dist/expand.css --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css",
      "default": "./dist/style.css"
    },
    "./expand.css": {
      "import": "./dist/expand.css",
      "require": "./dist/expand.css",
      "default": "./dist/expand.css"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js",
      "default": "./dist/types/index.mjs"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "import": "./dist/icons/index.mjs",
      "require": "./dist/icons/index.js",
      "default": "./dist/icons/index.mjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.mjs"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.8",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-hover-card": "^1.1.11",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.488.0",
    "motion": "^12.10.4",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@shadcn-plus/tsconfig": "*",
    "@tailwindcss/cli": "^4.0.17",
    "@tailwindcss/postcss": "^4.0.17",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "9.1.2",
    "globals": "15.15.0",
    "postcss": "^8.5.3",
    "react-is": "19.0.0",
    "tailwind-merge": "^3.1.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.17",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^5.10.1",
    "tw-animate-css": "^1.2.5",
    "typescript": "5.7.2"
  },
  "jest": {
    "preset": "scripts/jest/node"
  }
}
